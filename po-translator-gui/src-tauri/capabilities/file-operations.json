{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "file-operations",
  "description": "文件操作权限 - 限制仅访问应用数据和文档目录",
  "windows": ["main"],
  "permissions": [
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    "fs:allow-exists",
    "fs:allow-stat",
    "fs:scope-appdata-recursive",
    "fs:scope-applog-recursive",
    "fs:scope-document-recursive"
  ]
}

